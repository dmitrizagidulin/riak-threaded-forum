<%= link_to '< Forums List', forums_path, class: 'btn btn-small' %> |
<%= link_to 'Edit Forum', edit_forum_path(@forum), class: 'btn btn-small' %> 

<h4>Forum: <%= @forum.name %></h4>
<p id="notice"><%= notice %></p>

<%= link_to 'New Discussion', new_forum_discussion_path(@forum), class: 'btn' %>

<table class="table table-hover discussions-list">
<tbody>
<% @discussions.each do | discussion | %>
<tr>
  <td>
    <%= link_to discussion.name, url_for([@forum, discussion]) %>
  </td>
  <td><%= discussion.username %></td>
</tr>
<% end %>
</tbody>
</table>
