<%= link_to '< Forums List', forums_path, class: 'btn btn-small' %> |
<%= link_to 'Edit Forum', edit_forum_path(@forum), class: 'btn btn-small' %> 

<h4>Forum: <%= @forum.name %></h4>
<p id="notice"><%= notice %></p>


<table class="table table-hover">
<thead>
  <th>Post</th>
  <th>By</th>
</thead>
<% @posts.each do | post | %>
  <tr>
    <td><%= link_to post.name, post %></td>
    <td><%= post.username %></td>
  </tr>
<% end %>
</table>